<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.maplefix.mapper.NoteMapper">

    <resultMap type="top.maplefix.model.Note" id="NoteMap">
        <result property="noteId" column="note_id"/>
        <result property="title" column="title"/>
        <result property="summary" column="summary"/>
        <result property="content" column="content"/>
        <result property="htmlContent" column="html_content"/>
        <result property="click" column="click"/>
        <result property="like" column="like"/>
        <result property="chapter" column="chapter"/>
        <result property="bookId" column="book_id"/>
        <result property="headerImg" column="header_img"/>
        <result property="headerImgType" column="header_img_type"/>
        <result property="support" column="support"/>
        <result property="status" column="status"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <!--查询单个-->
    <select id="selectNoteById" resultMap="NoteMap">
        select
         note_id, title, summary, content, html_content, click, `like`, chapter, book_id,header_img,header_img_type,
         support, comment, status, weight, create_date, update_date
        from t_note
        where note_id = #{id}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectNoteList" resultMap="NoteMap">
        select
        note_id, title, summary, click, `like`, chapter, book_id,header_img, header_img_type,support,
        comment, status, weight, create_date, update_date
        from t_note
        <where>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="chapter != null and chapter != ''">
                and chapter = #{chapter}
            </if>
            <if test="bookId != null and bookId != '' ">
                and book_id = #{bookId}
            </if>
            <if test="support != null">
                and support = #{support}
            </if>
            <if test="params.beginDate != null and params.beginDate != ''"><!-- 开始时间检索 -->
                and date_format(create_date,'%y%m%d') &gt;= date_format(#{params.beginDate},'%y%m%d')
            </if>
            <if test="params.endDate != null and params.endDate != ''"><!-- 结束时间检索 -->
                and date_format(create_date,'%y%m%d') &lt;= date_format(#{params.endDate},'%y%m%d')
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertNote"  >
        insert into t_note
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="noteId != null and noteId != '' ">note_id,</if>
            <if test="title != null and title != '' ">title,</if>
            <if test="summary != null  and summary != ''">summary,</if>
            <if test="content != null  and content != ''">content,</if>
            <if test="htmlContent != null  and htmlContent != ''">html_content,</if>
            <if test="chapter != null  and chapter != ''">chapter,</if>
            <if test="bookId !=null ">book_id,</if>
            <if test="weight !=null ">weight,</if>
            <if test="headerImg != null and headerImg != '' ">header_img,</if>
            <if test="headerImgType != null and headerImgType != '' ">header_img_type,</if>
            <if test="support != null ">support,</if>
            <if test="comment != null ">comment,</if>
            <if test="createDate != null  and createDate != ''">create_date,</if>
            <if test="updateDate != null  and updateDate != ''">update_date</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="noteId != null and noteId != '' ">noteId,</if>
            <if test="title != null and title != '' ">title,</if>
            <if test="summary != null  and summary != ''">#{summary},</if>
            <if test="content != null  and content != ''">#{content},</if>
            <if test="htmlContent != null  and htmlContent != ''">#{htmlContent},</if>
            <if test="chapter != null  and chapter != ''">#{chapter},</if>
            <if test="bookId != null ">#{bookId},</if>
            <if test="weight != null ">#{weight},</if>
            <if test="headerImg != null  and headerImg != ''">#{headerImg},</if>
            <if test="headerImgType != null  and headerImgType != ''">#{headerImgType},</if>
            <if test="support != null ">#{support},</if>
            <if test="comment != null ">#{comment},</if>
            <if test="createDate != null  and createDate != ''">createDate,</if>
            <if test="updateDate != null  and updateDate != ''">updateDate</if>
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="updateNote">
        update t_note
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="summary != null and summary != ''">
                summary = #{summary},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="htmlContent != null">
                html_content = #{htmlContent},
            </if>
            <if test="chapter != null and chapter != ''">
                chapter = #{chapter},
            </if>
            <if test="bookId != null">
                book_id = #{bookId},
            </if>
            <if test="headerImg != null and headerImg != ''">
                header_img = #{headerImg},
            </if>
            <if test="headerImgType != null and headerImgType != ''">
                header_img_type = #{headerImgType},
            </if>
            <if test="support != null">
                support = #{support},
            </if>
            <if test="comment != null">
                comment = #{comment},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="weight != null">
                weight = #{weight},
            </if>
            <if test="updateDate != null and updateDate != ''">
                update_date = #{updateDate}
            </if>
        </set>
        where note_id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteNoteByIds">
        delete from t_note where note_id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
